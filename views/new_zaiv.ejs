<html>

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" type="text/css" href="/styles.css">
  <title>Самый лучший диплом</title>
</head>

<body>
  <div class="container">
    <div class="sidebar">
      <div class="Naiming">Servec desk</div>
      <div class="menu">
        <div class="button_menu"><a href="/users/zaiv_zaiv">Заявки </a>
        </div>
        <div class="button_menu">Документы</div>
        <div class="button_menu">Личный кабинет</div>
      </div>
    </div>

    <div class="main">
      <div class="header_new">
        <div class="right_header">
          <div class="date" id=date></div>
          <script>
            var d = new Date();
            data = ("0" + d.getDate()).slice(-2) + "." + ("0" + (Number(d.getMonth()) + 1)).slice(-2) + "." + d.getFullYear();
            document.getElementById("date").textContent = data;

          </script>
          <div class="name_photo">
            <div class="name">
              <%= user %>
            </div>
            <div class="photo"></div>
          </div>
        </div>
      </div>

      <h1>Создание новой заявки</h1>
      <form action="/users/new_zaiv" method="POST" id="myForm">
        <label for="number">Оборудование</label>
        <select type="text" id="number" name="invert_number" required>
          <option value="">Выберите инвертарный номер оборудования</option>
          <% data.forEach(function(user) { %>
            <option value="<%= user.invert_number %>"> <%= user.invert_number %> </option> <% }) %>
        </select>

        <label for="text">Описание проблемы</label>
        <textarea id="text" name="text" placeholder="Опишите кратко проблему"></textarea>
        <button type="submit" class="submit" name="submit" >Создать</button>
      </form>

     </body>

</html>